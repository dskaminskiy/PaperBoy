<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="title" format="string"/>
    <attr name="subtitle" format="string"/>
    <attr name="extraTitle" format="string"/>
    <attr name="isChecked" format="boolean"/>
    <attr name="isDivider" format="boolean"/>
    <attr name="iconColor" format="color"/>
    <attr name="leftIconColor" format="color"/>
    <attr name="rightIconColor" format="color"/>
    <attr name="backgroundColor" format="color"/>
    <attr name="titleColor" format="color"/>
    <attr name="subtitleColor" format="color"/>
    <attr name="hintText" format="string"/>
    <attr name="iconBackgroundColor" format="color"/>


    <!-- ICONS -->
    <attr name="iconConstant" format="enum">
        <enum name="ICON_ADD" value="0"/>
        <enum name="ICON_ARROW_BACK" value="1"/>
        <enum name="ICON_TRASH" value="2"/>
        <enum name="ICON_ARROW_FORWARD" value="3"/>
    </attr>
    <attr name="leftIconConstant" format="enum">
        <enum name="ICON_ADD" value="0"/>
        <enum name="ICON_ARROW_BACK" value="1"/>
        <enum name="ICON_TRASH" value="2"/>
        <enum name="ICON_ARROW_FORWARD" value="3"/>
    </attr>
    <attr name="rightIconConstant">
        <enum name="ICON_ADD" value="0"/>
        <enum name="ICON_ARROW_BACK" value="1"/>
        <enum name="ICON_TRASH" value="2"/>
        <enum name="ICON_ARROW_FORWARD" value="3"/>
    </attr>


    <declare-styleable name="CheckItemView">
        <attr name="title"/>
        <attr name="extraTitle"/>
        <attr name="isChecked"/>
        <attr name="isDivider"/>
    </declare-styleable>

    <declare-styleable name="ButtonView">
        <attr name="title"/>
        <attr name="titleColor"/>
        <attr name="backgroundColor"/>
        <attr name="leftIconConstant"/>
        <attr name="rightIconConstant"/>
        <attr name="leftIconColor"/>
        <attr name="rightIconColor"/>
    </declare-styleable>

    <declare-styleable name="NumberInputView">
        <attr name="hintText"/>
    </declare-styleable>

    <declare-styleable name="TextPasswordInputView">
        <attr name="hintText"/>
    </declare-styleable>
    
    <declare-styleable name="TopPopupView">
        <attr name="title"/>
        <attr name="titleColor"/>
        <attr name="subtitle"/>
        <attr name="subtitleColor"/>
        <attr name="iconConstant"/>
        <attr name="iconColor"/>
        <attr name="backgroundColor"/>
    </declare-styleable>

    <declare-styleable name="MiddleItemView">
        <attr name="title"/>
        <attr name="subtitle"/>
        <attr name="extraTitle"/>
        <attr name="isDivider"/>
        <attr name="iconConstant"/>
        <attr name="iconColor"/>
        <attr name="iconBackgroundColor"/>
    </declare-styleable>

</resources>