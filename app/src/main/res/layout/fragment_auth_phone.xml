<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/paper">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextStyle.Serif.Bold.24"
                android:minHeight="32dp"
                android:text="@string/phone_number"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextStyle.Sans.Text.16"
                android:textColor="@color/print70"
                android:minHeight="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/select_country_code_and_enter_phone"/>

        <deniskaminskiy.paperboy.presentation.view.InputPhoneNumberView
                android:id="@+id/vInputPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>

    </LinearLayout>

</FrameLayout>