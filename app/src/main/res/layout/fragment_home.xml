<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:background="@color/paper"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChannels"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/vProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center"
            android:indeterminateTint="@color/marlboroNew"/>


    <com.google.android.material.appbar.AppBarLayout
            android:background="@color/paper"
            android:layout_width="match_parent"
            android:layout_height="72dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/vCollapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:titleEnabled="true"
                app:contentScrim="@color/paper"
                app:title="Paperboy"
                app:collapsedTitleTextAppearance="@style/TextStyle.Serif.Bold.24"
                app:expandedTitleGravity="top"
                app:expandedTitleMarginStart="16dp"
                app:expandedTitleMarginBottom="14dp"
                app:expandedTitleTextAppearance="@style/TextStyle.Serif.Bold.32"
                app:expandedTitleMarginTop="16dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/vToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp"
                    app:layout_collapseMode="parallax"
                    android:layout_gravity="end|center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vSearch"
                        android:layout_width="40dp"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/ic_search"
                        app:tint="@color/iconDefaultColor"/>

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/vSettings"
                        android:layout_width="40dp"
                        android:padding="8dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/ic_settings"
                        app:tint="@color/iconDefaultColor"/>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>